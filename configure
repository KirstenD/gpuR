################################
# configure for package gpuR
# Charles Determan Jr.        
################################

CXX_STD="CXX_STD=CXX11"
PKG_CXXFLAGS="PKG_CXXFLAGS=-I../inst/include"
#PKG_LIBS="PKG_LIBS=-lOpenCL"

echo "${CXX_STD}" > src/Makevars

echo -n "  checking for OS..."
if test `uname` = "Linux" ; then
  echo "Linux"
  LIBS="PKG_LIBS=-lOpenCL"
elif test `uname` = "Darwin" ; then
  echo "Darwin"
  LIBS="PKG_LIBS=-framework OpenCL"
else
  echo "Other:" `uname`
fi

echo "${PKG_CXXFLAGS}" >> src/Makevars
echo "${LIBS}" >> src/Makevars
