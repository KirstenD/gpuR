CXX_STD="CXX_STD=CXX11"
PKG_CXXFLAGS="PKG_CXXFLAGS=-I../inst/include"
PKG_LIBS="PKG_LIBS=-lOpenCL"

echo "${CXX_STD}" > src/Makevars
echo "${PKG_CXXFLAGS}" >> src/Makevars
echo "${PKG_LIBS}" >> src/Makevars
